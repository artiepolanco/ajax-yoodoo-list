<p id="notice"><%= notice %></p>

<h1>Yoogottadoos!</h1>

<table class="table table-hover table-bordered">
  <thead>
    <tr>
      <th>Yougottadothese...</th>
      <th colspan="3">Wachawannado?</th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.name %></td>
        <!-- <td><%= link_to 'Dig deeper', task %></td> -->
        <td><%= link_to 'Change it...', edit_task_path(task),remote: true %></td>
        <td><%= link_to 'Kaboom!', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= render 'form', task: @task %>

<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">Really? Editing...</h4>
      </div>
      <div class="modal-body">
        ...
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <button type="button" id="save" class="btn btn-primary">Change it!</button>
      </div>
    </div>
  </div>
</div>
